@model MoviesRental.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New";
    Layout = "_Layout";
}
<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.DateOfBirth)
        @Html.TextBoxFor(m => m.Customer.DateOfBirth, "{0:d MM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.DateOfBirth)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MemberShipId)

        @Html.DropDownListFor(m => m.Customer.MemberShipId, new SelectList(Model.MemberShips, "Id", "Name"), "Select MemberShip Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Customer.MemberShipId)
        
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.IsSubscirbedToNewsLetter)
        @Html.CheckBoxFor(m => m.Customer.IsSubscirbedToNewsLetter, new { @class = "form-check" })
       

    </div>
    @Html.HiddenFor(m => m.Customer.Id)
    @Html.AntiForgeryToken()
    <button type ="submit" class ="btn btn-primary">Save</button>
}
