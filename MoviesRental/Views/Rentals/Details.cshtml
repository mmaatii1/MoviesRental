@model MoviesRental.Models.Rental

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>About rental @Html.DisplayFor(model=>model.Id)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateRented)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateRented)
        </dd>
         <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateReturned)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateReturned)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        </dl>
        <h5>Customer</h5>
        <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.MemberShip.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.MemberShip.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.MemberShip.DiscountInProcent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.MemberShip.DiscountInProcent)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.DateOfBirth)
        </dd>
        </dl>
        <h5>Movie</h5>
        <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.MovieName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.MovieName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre.GenreName)
        </dt>
        <dd class="col-sm-10">
