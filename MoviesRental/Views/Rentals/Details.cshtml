        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.DateAdded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.DateAdded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.NumberInStock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.NumberInStock)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Back to rental list","Index","Rentals","",new{@class = "btn btn-primary"})
    @Html.ActionLink("Edit this rental","Edit","Rentals", new {id = Model.Id}, new{@class="btn btn-primary"})
</div>
