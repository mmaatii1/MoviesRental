@using Microsoft.AspNetCore.Identity.UI.V3.Pages.Internal
@model dynamic

@{
    ViewBag.Title = "New rental";
    Layout = "_Layout";
}

<h2>New rental</h2>

<form id ="newRental">
    <div class="form-group">
        <label>Customer</label>
        <input id ="customer" name ="customer" type="text" value="" class="form-control" />
    </div>
    <div class="form-group">
        <label>Movie</label>
        <input id ="movie" name ="movie" type="text" value="" class="form-control" />
    </div>
    <ul id="movies" class="list-group"></ul>
    <button class="btn btn-primary">Submit</button>
</form>

@*https://twitter.github.io/typeahead.js/examples/#remote*@
@section Scripts
{
    <script>
        $(document).ready(function() {
            var viewmodel = {
                movieIds: []


            };
            var customers = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/customers?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });
            var movies = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                remote: {
                    url: '/api/movies?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#customer').typeahead({
                    minLength: 3,
                    highlight: true
                },
                {
                    name: 'customers',
                    display: 'name',
                    source: customers
                }).on("typeahead:select",
                function(e, customer) {
                    viewmodel.customerId = customer.id;
                });
            $('#movie').typeahead({
                    minLength: 3,
                    highlight: true
                },
                {
                    name: 'movies',
                    display: 'movieName',
                    source: movies
                }).on("typeahead:select",
                function(e, movie) {
                    $("#movies").append("<li>" + movie.movieName + "</li>");

                    $("#movie").typeahead("val", "");
                    viewmodel.movieIds.push(movie.id);
                    });
            @*tu by sie przydala jakas walidacja przed sumbitem *@
            $("#newRental").submit(function(e) {
                e.preventDefault();
                $.ajax({
                        url: "/api/rentals",
                    method: "post",
                    contentType: "application/json;charset=utf-8",
                        data: JSON.stringify(viewmodel)

                    })
                    .done(function() {
                        toastr.success("Rental added");
                        newRental.clear;

                    })
                    .fail(function(error) {
                        toastr.fail("Something weird happend, try again");
                    });
            });

        });

    </script>
}
